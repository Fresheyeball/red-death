@import 'nib'
@import 'Vendor/GGS/GGS.styl'

gutter 	= 50px
//seem   	= 10px
seem 	= 0.75em
phi 	= 1.618

@import 'Elements/header'
@import 'Elements/article'

html 
	background #cfcfcf
	box-shadow inset 0 0 600px rgba(0,0,0,0.1)
	font-reset()

html, body
	reset-box-model()

@font-face
	font-face('OpenSans-Light', 'OpenSans-Light-webfont')

@font-face
	font-face('OpenSans-Regular', 'OpenSans-Regular-webfont')	

body
	font-family 'OpenSans-Regular'
	color lighten(black, 45%)

h1, h2, h3, h4 
	font-family 'OpenSans-Light'
	margin 0
	font-weight 200

